export FOLDER_HOME=${HOME}/Home
export FOLDER_CODE=${FOLDER_HOME}/Code
export FOLDER_3PC=${FOLDER_CODE}/3PC
export FOLDER_FILES=${FOLDER_HOME}/Files
export FOLDER_AUDIO=${FOLDER_HOME}/Audio
export FOLDER_VIDEO=${FOLDER_HOME}/Video
export FOLDER_GAMES=${FOLDER_HOME}/Games
export FOLDER_PICTURES=${FOLDER_HOME}/Pictures

# Directories to be added to PATH
export PATH="/usr/local/bin:/opt/homebrew/bin:$PATH"

# Locale settings
# Might require you to run `sudo locale-gen en_US.UTF-8`
export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"

# Default command for fzf
export FZF_DEFAULT_COMMAND='find . -type f -not -path "./.git/*"'

# Editor and pager
export EDITOR="vim"
export VISUAL="$EDITOR"
export PAGER="less"

# History settings
export HISTSIZE=""
export HISTFILESIZE=""
export HISTTIMEFORMAT="%F %T "

# Personnal PS1
export PS1='\[\e[0m\]\W \[\e[0m\]$ \[\e[0m\]'
